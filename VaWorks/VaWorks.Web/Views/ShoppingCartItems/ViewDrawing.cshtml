@model VaWorks.Web.ViewModels.KitDrawingViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        html, body {
            height: 100%;
            width: 100%;
            margin: 0px;
            padding: 0px;
        }

        .drawing {
            position: absolute;
            height:1700px;
            width: 2200px;
        }

        .drawing-title {
            position: absolute;
            left: 720px;
            top: 1489px;
            width: 350px;
            height: 140px;
            font-family: sans-serif;
            font-weight: 100;
            font-size: 1.5em;
            background: #fff;
        }
    </style>
    <title>@Model.KitNumber</title>
</head>
<body>
    <div class="drawing">
        <img src="~/Content/Images/@(Model.KitNumber).jpg" />
        <h1 class="drawing-title">@Model.Description</h1>
    </div>
</body>
</html>
