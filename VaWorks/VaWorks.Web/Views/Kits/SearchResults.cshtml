@model IEnumerable<VaWorks.Web.Data.Entities.Kit>

@{ 
    ViewBag.Title = "Search Results";
}

<h2>Search Results</h2>

<div class="row">
    <div class="col-md-3">
    @if (Model.Count() > 0) {
    <ul class="nav nav-pills nav-stacked">
    @foreach (var k in Model) {
        <li>@Html.ActionLink(k.KitNumber, "SelectResult", new { kitId = k.KitId, organizationId = ViewBag.OrganizationId }, new { @class = "btn btn-link" })</li>
    }
    </ul>
    } else {
        <p>No search results.</p>
        @Html.ActionLink("Search", "Search", new { organizationId = ViewBag.OrganizationId})
    }
    </div>
</div>